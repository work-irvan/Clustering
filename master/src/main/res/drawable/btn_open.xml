<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" >
        <shape>
            <corners
                android:radius="5dp" />
            <padding
                android:bottom="5dp"
                android:top="5dp"
                android:left="20dp"
                android:right="20dp" />
            <solid
                android:color="@color/colorHeader" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <corners
                android:radius="5dp" />
            <padding
                android:bottom="5dp"
                android:top="5dp"
                android:left="20dp"
                android:right="20dp" />
            <solid
                android:color="@color/colorContent" />
        </shape>
    </item>
</selector>